{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "docs/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.js"
  ]
}